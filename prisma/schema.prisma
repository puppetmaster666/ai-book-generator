generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  passwordHash  String?

  // Subscription
  plan          String    @default("free") // free, monthly, yearly
  credits       Int       @default(0)
  stripeCustomerId String?
  stripeSubscriptionId String?

  // NextAuth relations
  accounts      Account[]
  sessions      Session[]

  books         Book[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Book {
  id              String    @id @default(cuid())

  // Optional user association (anonymous purchases have null)
  userId          String?
  user            User?     @relation(fields: [userId], references: [id])

  // For anonymous users
  email           String?

  // User inputs
  title           String
  authorName      String    @default("Anonymous")
  genre           String
  bookType        String    // fiction, non-fiction
  premise         String    @db.Text
  characters      Json      // Array of {name, description}
  beginning       String    @db.Text
  middle          String    @db.Text
  ending          String    @db.Text
  writingStyle    String
  chapterFormat   String    // numbers, titles, both, pov
  fontStyle       String    @default("classic")

  // Book format & illustrations
  bookFormat      String    @default("text_only") // text_only, illustrated, picture_book
  artStyle        String?   // watercolor, cartoon, storybook, etc.
  bookPreset      String?   // novel, childrens_picture, etc.

  // Target settings
  targetWords     Int
  targetChapters  Int

  // Generated content
  outline         Json?     // Array of {chapterNum, title, summary, pov, targetWords, illustrationPrompt?}
  storySoFar      String?   @db.Text
  characterStates Json?     // Current state of each character

  // Visual consistency guides (for illustrated books)
  characterVisualGuide Json?  // Detailed character descriptions for consistent illustrations
  visualStyleGuide     Json?  // Style guide for maintaining illustration consistency

  // Cover
  coverImageUrl   String?
  coverPrompt     String?   @db.Text

  // Status
  status          String    @default("pending") // pending, outlining, generating, completed, failed
  currentChapter  Int       @default(0)
  totalChapters   Int       @default(0)
  totalWords      Int       @default(0)
  errorMessage    String?   @db.Text

  // Payment
  paymentId       String?
  paymentStatus   String    @default("pending") // pending, completed, failed

  chapters        Chapter[]
  illustrations   Illustration[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  completedAt     DateTime?
}

model Chapter {
  id        String   @id @default(cuid())
  bookId    String
  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)

  number    Int
  title     String
  content   String   @db.Text
  summary   String   @db.Text
  wordCount Int

  illustrations Illustration[]
  createdAt     DateTime @default(now())

  @@unique([bookId, number])
  @@index([bookId])
}

model Illustration {
  id          String   @id @default(cuid())
  bookId      String
  book        Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  chapterId   String?
  chapter     Chapter? @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  // Image details
  imageUrl    String   // URL to stored image
  prompt      String   @db.Text  // The prompt used to generate
  altText     String?  // Accessibility text
  position    Int      @default(0) // Order within chapter (0 = chapter start)

  // Metadata
  width       Int      @default(1024)
  height      Int      @default(1024)
  style       String?  // Art style used

  createdAt   DateTime @default(now())

  @@index([bookId])
  @@index([chapterId])
}

model Payment {
  id              String   @id @default(cuid())

  // Stripe
  stripePaymentId String   @unique
  stripeCustomerId String?

  // Details
  email           String
  amount          Int      // in cents
  currency        String   @default("usd")
  status          String   // pending, completed, failed, refunded

  // What was purchased
  productType     String   // one-time, monthly, yearly
  bookId          String?  // for one-time purchases

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model PromoCode {
  id          String   @id @default(cuid())
  code        String   @unique
  discount    Float    @default(1.0) // 1.0 = 100% off (free)
  maxUses     Int
  currentUses Int      @default(0)
  validUntil  DateTime?
  isActive    Boolean  @default(true)
  onePerUser  Boolean  @default(false) // Limit to one use per email/IP
  usages      PromoCodeUsage[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PromoCodeUsage {
  id          String    @id @default(cuid())
  promoCodeId String
  promoCode   PromoCode @relation(fields: [promoCodeId], references: [id], onDelete: Cascade)
  email       String?
  ipAddress   String?
  bookId      String?
  createdAt   DateTime  @default(now())

  @@index([promoCodeId])
  @@index([email])
  @@index([ipAddress])
}
