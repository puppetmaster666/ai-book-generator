generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String         @id @default(cuid())
  email                String         @unique
  name                 String?
  passwordHash         String?
  plan                 String         @default("free")
  credits              Int            @default(0)
  stripeCustomerId     String?
  stripeSubscriptionId String?
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt
  emailVerified        DateTime?
  image                String?
  freeBookUsed         Boolean        @default(false)
  isAdmin              Boolean        @default(false)
  freeCredits          Int            @default(0)
  accounts             Account[]
  books                Book[]
  creditClaims         CreditClaim[]
  notifications        Notification[]
  sessions             Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Book {
  id                     String         @id @default(cuid())
  userId                 String?
  email                  String?
  title                  String
  authorName             String         @default("")
  genre                  String
  bookType               String
  premise                String
  characters             Json
  beginning              String
  middle                 String
  ending                 String
  writingStyle           String
  chapterFormat          String
  fontStyle              String         @default("classic")
  targetWords            Int
  targetChapters         Int
  outline                Json?
  storySoFar             String?
  characterStates        Json?
  coverImageUrl          String?
  coverPrompt            String?
  status                 String         @default("pending")
  currentChapter         Int            @default(0)
  totalChapters          Int            @default(0)
  totalWords             Int            @default(0)
  errorMessage           String?
  paymentId              String?
  paymentStatus          String         @default("pending")
  createdAt              DateTime       @default(now())
  updatedAt              DateTime       @updatedAt
  completedAt            DateTime?
  artStyle               String?
  bookFormat             String         @default("text_only")
  bookPreset             String?
  characterVisualGuide   Json?
  visualStyleGuide       Json?
  dialogueStyle          String?
  featured               Boolean        @default(false)
  generationStartedAt    DateTime?
  downloadFormat         String?
  downloadedAt           DateTime?
  protagonistDescription String?
  protagonistPhoto       String?
  protagonistStyled      String?
  contentRating          String         @default("general")
  originalIdea           String?
  paymentMethod          String?
  ipAddress              String?
  characterPortraits     Json?
  screenplayContext      Json?
  metadata               Json?
  isFeaturedSample       Boolean        @default(false)
  samplePdfUrl           String?
  livePreview            String?
  user                   User?          @relation(fields: [userId], references: [id])
  chapters               Chapter[]
  illustrations          Illustration[]
}

model Chapter {
  id               String         @id @default(cuid())
  bookId           String
  number           Int
  title            String
  content          String
  summary          String
  wordCount        Int
  createdAt        DateTime       @default(now())
  dialogue         Json?
  sceneDescription Json?
  reviewed         Boolean        @default(false)
  needsPolish      Boolean        @default(false) // Chapters flagged for background polish (review timeout/hard reject)
  book             Book           @relation(fields: [bookId], references: [id], onDelete: Cascade)
  illustrations    Illustration[]

  @@unique([bookId, number])
  @@index([bookId])
}

model Illustration {
  id           String   @id @default(cuid())
  bookId       String
  chapterId    String?
  imageUrl     String?
  prompt       String
  altText      String?
  position     Int      @default(0)
  width        Int      @default(1024)
  height       Int      @default(1024)
  style        String?
  createdAt    DateTime @default(now())
  originalUrl  String?
  errorMessage String?
  retryCount   Int      @default(0)
  status       String   @default("completed")
  updatedAt    DateTime @default(now()) @updatedAt
  book         Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  chapter      Chapter? @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  @@index([bookId])
  @@index([chapterId])
  @@index([bookId, status])
}

model Payment {
  id               String   @id @default(cuid())
  stripePaymentId  String   @unique
  stripeCustomerId String?
  email            String
  amount           Int
  currency         String   @default("usd")
  status           String
  productType      String
  bookId           String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model PromoCode {
  id          String           @id @default(cuid())
  code        String           @unique
  discount    Float            @default(1.0)
  maxUses     Int
  currentUses Int              @default(0)
  validUntil  DateTime?
  isActive    Boolean          @default(true)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  onePerUser  Boolean          @default(false)
  fixedPrice  Int?
  usages      PromoCodeUsage[]
}

model PromoCodeUsage {
  id          String    @id @default(cuid())
  promoCodeId String
  email       String?
  ipAddress   String?
  bookId      String?
  createdAt   DateTime  @default(now())
  promoCode   PromoCode @relation(fields: [promoCodeId], references: [id], onDelete: Cascade)

  @@index([promoCodeId])
  @@index([email])
  @@index([ipAddress])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String
  title     String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model CreditClaim {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String?
  credits   Int      @default(1)
  claimed   Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())
  email     String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@index([email])
}

model EmailLog {
  id        String   @id @default(cuid())
  to        String
  subject   String
  template  String
  status    String
  error     String?
  messageId String?
  userId    String?
  metadata  Json?
  createdAt DateTime @default(now())

  @@index([to])
  @@index([status])
  @@index([createdAt])
}

model SiteSettings {
  id                    String   @id @default("default")
  trafficWarningEnabled Boolean  @default(false)
  updatedAt             DateTime @updatedAt
}
